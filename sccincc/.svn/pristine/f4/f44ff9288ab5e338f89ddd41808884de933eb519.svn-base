<script type="text/javascript">







function delmut(){}
function del(ids){
	 $.ajax(
	            {
	                url: '/Faq/del',
	                dataType: 'json',
	                type: 'POST',
	                async: false,
	                data:{ids:ids},
	                success: function (data, textStatus) {	                    
		                    alert(data.msg);
		                    location.href='/Faq/';		                    
	                },
	                error: function (XMLHttpRequest, textStatus, errorThrown) {
	                    alert('服务器访问发生异常！' + textStatus);
	                    return;
	                }
	            }
	            );	
}
</script>
<script type="text/javascript">

$(function(){
	 $.ajax(
	            {
	                url: '/selectdb/',
	                dataType: 'json',
	                type: 'POST',
	                async: false,
	                data:{tbname:'crm/FaqCode',key:'id',value:'CodeName'},
	                success: function (data, textStatus) {
	                        if(data.success)
	                        {
	                        	for (var i = 0; i < data.data.length; i++) {
	                        	$("<option value='" + data.data[i].id + "'  >" + data.data[i].CodeName + "</option>").appendTo("#faqCodeId");	
	                        	}
		                        }
	                        else{
	                        	alert(data.msg);
		                        }
	                },
	                error: function (XMLHttpRequest, textStatus, errorThrown) {
	                    alert('服务器访问发生异常！' + textStatus);
	                    return;
	                }

	            }
	            );	
	
});

</script>

